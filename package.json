{
  "name": "code-pulse",
  "displayName": "CodePulse",
  "description": "Tracks coding activity for GitHub contributions",
  "publisher": "skupperr",
  "keywords": [
    "git",
    "productivity",
    "tracking",
    "activity",
    "coding"
  ],
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepulse.forceSnapshot",
        "title": "CodePulse: Force Snapshot",
        "category": "CodePulse"
      }
    ],
    "configuration": {
      "title": "CodePulse Settings",
      "properties": {
        "codepulse.enabled": {
          "type": "boolean",
          "default": true,
          "title": "Enable CodePulse tracking",
          "description": "When disabled, CodePulse will not record or push any activity."
        },
        "codepulse.snapshotIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "title": "Snapshot interval (minutes)",
          "description": "How often CodePulse snapshots activity."
        },
        "codepulse.enableGitSync": {
          "type": "boolean",
          "default": true,
          "title": "Enable Git sync",
          "description": "Automatically commit and push snapshots to your Git repository."
        },
        "codepulse.enableNotifications": {
          "type": "boolean",
          "default": true,
          "title": "Enable notifications",
          "description": "Show notifications for snapshot and push status."
        },
        "codepulse.repoUrl": {
          "type": "string",
          "default": "",
          "title": "Repository URL",
          "description": "Git repository URL where CodePulse will store activity (must exist and you must have push access)."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint src",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "watch": "tsc -watch -p ./",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
