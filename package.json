{
  "name": "pulse-git",
  "displayName": "PulseGit",
  "description": "Tracks coding activity for GitHub contributions",
  "publisher": "skupperr",
  "keywords": [
    "git",
    "productivity",
    "tracking",
    "activity",
    "coding"
  ],
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
  "onStartupFinished",
  "onCommand:pulsegit.forceSnapshot"
],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pulsegit.forceSnapshot",
        "title": "pulsegit: Force Snapshot",
        "category": "PulseGit"
      }
    ],
    "configuration": {
      "title": "PulseGit Settings",
      "properties": {
        "pulsegit.enabled": {
          "type": "boolean",
          "default": true,
          "title": "Enable PulseGit tracking",
          "description": "When disabled, PulseGit will not record or push any activity."
        },
        "pulsegit.snapshotIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "title": "Snapshot interval (minutes)",
          "description": "How often PulseGit snapshots activity."
        },
        "pulsegit.enableGitSync": {
          "type": "boolean",
          "default": true,
          "title": "Enable Git sync",
          "description": "Automatically commit and push snapshots to your Git repository."
        },
        "pulsegit.enableNotifications": {
          "type": "boolean",
          "default": true,
          "title": "Enable notifications",
          "description": "Show notifications for snapshot and push status."
        },
        "pulsegit.repoUrl": {
          "type": "string",
          "default": "",
          "title": "Repository URL",
          "description": "Git repository URL where PulseGit will store activity (must exist and you must have push access)."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint src",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "watch": "tsc -watch -p ./",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skupperr/PulseGit.git"
  }
}